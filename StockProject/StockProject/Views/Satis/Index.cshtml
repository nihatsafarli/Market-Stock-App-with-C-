@using StockProject.Models.Entity
@model List<tblsatislar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>PERSONEL</th>
        <th>MÜŞTERİ</th>
        <th>FİYAT</th>
        <th>TARİH</th>       
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.tblurunler.ad</td>
            <td>@x.tblpersoneller.ad @x.tblpersoneller.soyad</td>
            <td>@x.tblmusteriler.ad @x.tblmusteriler.soyad</td>
            <td>@x.fiyat</td>
            <td>@x.tarih</td>       
        </tr>
    }
</table>
<a href="/Satis/YeniSatis/" , class="btn btn-success">Yeni Satis<a />

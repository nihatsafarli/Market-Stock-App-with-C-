@using StockProject.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<tblpersoneller>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>DEPARTMAN</th>       
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td>@x.soyad</td>
            <td>@x.departman</td>            
            <td><a href="/Personel/PersonelSil/@x.id" class="btn btn-danger">SİL</a></td>
            <td><a href="/Personel/PersonelGetir/@x.id" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Personel/YeniPersonel" , class="btn btn-success">Yeni Personel<a/>

